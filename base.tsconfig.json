{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "strict": true,
    "alwaysStrict": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@remirror/core": ["@remirror/core/src/index.ts"],
      "@remirror/core-extensions": ["@remirror/core-extensions/src/index.ts"],
      "@remirror/react": ["@remirror/react/src/index.ts"],
      "@remirror/extension-mention": ["@remirror/extension-mention/src/index.ts"],
      "@remirror/renderer-react": ["@remirror/renderer-react/src/index.ts"],
      "@remirror/ui-twitter": ["@remirror/ui-twitter/src"],
      "@test-utils": ["@remirror/core/src/__tests__/test-utils.tsx"],
      "*": ["support/types/*"]
    }
  }
}
