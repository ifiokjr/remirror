{
  "name": "remirror",
  "description": "A text editor for react built with prosemirror",
  "license": "MIT",
  "author": "Ifiok Jr. <ifiokotung@gmail.com>",
  "repository": "https://github.com/ifiokjr/remirror",
  "version": "0.0.1-alpha.0",
  "main": "lib/index.js",
  "module": "lib/dist/remirror.esm.js",
  "files": [
    "lib",
    "src"
  ],
  "scripts": {
    "prebuild": "run-s clean lint",
    "build": "run-s build:declaration build:babel",
    "build-storybook": "build-storybook",
    "build:babel": "babel src --out-dir lib --extensions \".ts,.tsx\" -s",
    "build:declaration": "tsc -p ./tsconfig.prod.json --emitDeclarationOnly --declarationMap",
    "clean": "rimraf lib",
    "dev": "run-p watch:*",
    "lint": "tslint --project tsconfig.json --config ../../tslint.json",
    "storybook": "start-storybook -p 6006",
    "storybook:ci": "start-storybook -p 6006 --ci",
    "test": "jest",
    "test:live": "cross-env TEST_ENV=live jest",
    "typecheck": "tsc -p ./tsconfig.json --noEmit",
    "watch:babel": "babel src --out-dir lib --extensions \".ts,.tsx\" -w",
    "watch:declaration": "tsc -p ./tsconfig.prod.json --emitDeclarationOnly --declarationMap --watch"
  },
  "dependencies": {
    "@remirror/core": "0.0.0",
    "@remirror/core-extensions": "0.0.0",
    "@remirror/react": "0.0.0",
    "@remirror/renderer": "0.0.0",
    "@types/react-icons": "2.2.6"
  },
  "peerDependencies": {
    "@types/react": "^16.7.18",
    "@types/react-dom": "^16.0.11",
    "react": "16.8.0-alpha.1",
    "react-dom": "16.8.0-alpha.1"
  },
  "keywords": [
    "prosemirror",
    "react",
    "ssr",
    "text editor"
  ],
  "types": "lib/index.d.ts",
  "umd": "lib/dist/remirror.umd.js",
  "umd:min": "lib/dist/remirror.umd.min.js",
  "umdGlobals": {
    "react": "React",
    "react-dom": "ReactDOM"
  }
}
