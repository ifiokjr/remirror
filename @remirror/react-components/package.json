{
  "name": "@remirror/react-components",
  "description": "react-components utilities for remirror",
  "license": "MIT",
  "author": "Ifiok Jr. <ifiokotung@gmail.com>",
  "homepage": "https://github.com/ifiokjr/remirror/tree/master/@remirror/react-components",
  "repository": {
    "type": "git",
    "url": "https://github.com/ifiokjr/remirror.git",
    "directory": "@remirror/react-components"
  },
  "version": "0.0.1-alpha.11",
  "main": "lib/index.js",
  "module": "lib/dist/react-components.esm.js",
  "files": [
    "lib",
    "src"
  ],
  "scripts": {
    "build": "run-p build:*",
    "build:babel": "babel src --out-dir lib --extensions \".ts,.tsx\" -s",
    "build:declaration": "tsc -p ./tsconfig.prod.json --emitDeclarationOnly --declarationMap",
    "dev": "run-p dev:*",
    "dev:babel": "babel src --out-dir lib --extensions \".ts,.tsx\" -s --watch",
    "dev:declaration": "tsc -p ./tsconfig.prod.json --emitDeclarationOnly --declarationMap --watch",
    "lint": "tslint --project tsconfig.json --config ../../tslint.json",
    "typecheck": "tsc -p ./tsconfig.json --noEmit"
  },
  "types": "lib/index.d.ts",
  "dependencies": {
    "@babel/runtime": "^7.4.5",
    "@emotion/core": "^10.0.7",
    "@emotion/styled": "^10.0.12",
    "@remirror/core": "0.0.1-alpha.11",
    "@remirror/core-extensions": "0.0.1-alpha.11",
    "@remirror/react-ssr": "0.0.1-alpha.11",
    "@remirror/renderer-react": "0.0.1-alpha.11",
    "@types/hoist-non-react-statics": "^3.3.1",
    "@types/prosemirror-commands": "^1.0.1",
    "@types/prosemirror-model": "^1.7.1",
    "@types/prosemirror-state": "^1.2.3",
    "@types/prosemirror-view": "^1.3.2",
    "@types/react": "^16.8.19",
    "@types/react-dom": "^16.8.0",
    "emotion": "^10.0.7",
    "hoist-non-react-statics": "^3.3.0",
    "prosemirror-commands": "^1.0.8",
    "prosemirror-model": "^1.7.1",
    "prosemirror-state": "^1.2.3",
    "prosemirror-view": "^1.9.9"
  },
  "peerDependencies": {
    "react": "^16.8.0",
    "react-dom": "^16.8.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "cjs": "lib/dist/react-components.cjs.js",
  "umd": "lib/dist/react.umd.js",
  "umd:min": "lib/dist/react.umd.min.js",
  "umdGlobals": {
    "react": "React",
    "react-dom": "ReactDOM",
    "@remirror/core": "RemirrorCore",
    "@remirror/core-extensions": "RemirrorCoreExtensions"
  }
}
