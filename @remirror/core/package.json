{
  "name": "@remirror/core",
  "description": "Core utilities for remirror",
  "license": "MIT",
  "author": "Ifiok Jr. <ifiokotung@gmail.com>",
  "repository": "https://github.com/ifiokjr/remirror/tree/@remirror/core",
  "version": "0.0.0",
  "main": "lib/index.js",
  "module": "lib/dist/core.esm.js",
  "browser": "lib/dist/core.umd.js",
  "files": [
    "lib",
    "src"
  ],
  "scripts": {
    "prebuild": "run-s clean lint",
    "build": "run-s build:declaration build:babel",
    "build-storybook": "build-storybook",
    "build:babel": "babel src --out-dir lib --extensions \".ts,.tsx\" --source-maps true",
    "build:declaration": "tsc -p ./tsconfig.prod.json --emitDeclarationOnly --declarationMap",
    "clean": "rimraf lib",
    "dev": "run-p watch:*",
    "lint": "tslint --project tsconfig.json --config ../../tslint.json",
    "storybook": "start-storybook -p 6006",
    "test": "jest",
    "test:live": "cross-env TEST_ENV=live jest",
    "typecheck": "tsc -p ./tsconfig.json --noEmit",
    "watch:babel": "babel src --out-dir lib --extensions \".ts,.tsx\" -w",
    "watch:declaration": "tsc -p ./tsconfig.prod.json --emitDeclarationOnly --declarationMap --watch"
  },
  "dependencies": {
    "@types/prosemirror-commands": "^1.0.1",
    "@types/prosemirror-inputrules": "^1.0.2",
    "@types/prosemirror-keymap": "^1.0.1",
    "@types/prosemirror-model": "^1.7.0",
    "@types/prosemirror-schema-list": "^1.0.1",
    "@types/prosemirror-state": "^1.2.1",
    "@types/prosemirror-transform": "^1.1.0",
    "@types/prosemirror-view": "^1.3.0",
    "prosemirror-commands": "^1.0.7",
    "prosemirror-inputrules": "^1.0.1",
    "prosemirror-keymap": "^1.0.1",
    "prosemirror-model": "^1.7.0",
    "prosemirror-schema-list": "^1.0.2",
    "prosemirror-state": "^1.2.2",
    "prosemirror-transform": "^1.1.3",
    "prosemirror-view": "^1.7.0",
    "simplytyped": "^1.7.0"
  },
  "peerDependencies": {},
  "types": "lib/index.d.ts",
  "umdGlobals": {}
}
