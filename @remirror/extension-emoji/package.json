{
  "private": true,
  "name": "@remirror/extension-emoji",
  "description": "mention extension for the remirror editor",
  "license": "MIT",
  "author": "Ifiok Jr. <ifiokotung@gmail.com>",
  "repository": "https://github.com/ifiokjr/remirror/tree/@remirror/extension-emoji",
  "version": "0.0.1-alpha.1",
  "main": "lib/index.js",
  "module": "lib/dist/extension-emoji.esm.js",
  "files": [
    "lib",
    "src"
  ],
  "scripts": {
    "prebuild": "run-s clean lint",
    "build": "run-s build:declaration build:babel",
    "build:babel": "babel src --out-dir lib --extensions \".ts,.tsx\" -s",
    "build:declaration": "tsc -p ./tsconfig.prod.json --emitDeclarationOnly --declarationMap",
    "clean": "rimraf lib",
    "dev": "run-p watch:*",
    "lint": "tslint --project tsconfig.json --config ../../tslint.json",
    "test": "jest",
    "test:live": "cross-env TEST_ENV=live jest",
    "typecheck": "tsc -p ./tsconfig.json --noEmit",
    "watch:babel": "babel src --out-dir lib --extensions \".ts,.tsx\" -w",
    "watch:declaration": "tsc -p ./tsconfig.prod.json --emitDeclarationOnly --declarationMap --watch"
  },
  "types": "lib/index.d.ts",
  "dependencies": {
    "@remirror/core": "0.0.1-alpha.2",
    "@remirror/core-extensions": "0.0.1-alpha.2",
    "emoji-regex": "7.0.3",
    "@types/emoji-mart": "2.8.2",
    "@types/lodash": "4.14.121",
    "@types/prosemirror-model": "1.7.0",
    "@types/prosemirror-state": "1.2.3",
    "@types/prosemirror-view": "1.3.1",
    "emoji-mart": "2.9.2",
    "lodash": "4.17.11",
    "prosemirror-model": "1.7.0",
    "prosemirror-state": "1.2.2",
    "prosemirror-view": "1.8.1",
    "simplytyped": "1.8.0"
  },
  "devDependencies": {
    "jest-remirror": "0.0.1-alpha.2"
  },
  "umd": "lib/dist/extension-emoji.umd.js",
  "umd:min": "lib/dist/extension-emoji.umd.min.js",
  "umdGlobals": {
    "@remirror/core": "RemirrorCore",
    "@remirror/core-extensions": "RemirrorCoreExtensions"
  }
}
