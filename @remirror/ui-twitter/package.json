  "license": "MIT",
  "author": "Ifiok Jr. <ifiokotung@gmail.com>",
  "homepage": "https://github.com/ifiokjr/remirror/tree/master/@remirror/ui-twitter",
  "repository": {
    "type": "git",
    "url": "https://github.com/ifiokjr/remirror.git",
    "directory": "@remirror/ui-twitter"
  },
  "version": "0.0.1-alpha.6",
  "main": "lib/index.js",
  "module": "lib/dist/ui-twitter.esm.js",
  "files": [
    "lib",
    "src"
  ],
  "scripts": {
    "build": "run-s build:declaration build:babel",
    "build:babel": "babel src --out-dir lib --extensions \".ts,.tsx\" -s",
    "build:declaration": "tsc -p ./tsconfig.prod.json --emitDeclarationOnly --declarationMap",
    "lint": "tslint --project tsconfig.json --config ../../tslint.json",
    "typecheck": "tsc -p ./tsconfig.json --noEmit"
  },
  "types": "lib/index.d.ts",
  "dependencies": {
    "@emotion/core": "^10.0.9",
    "@emotion/styled": "^10.0.9",
    "@remirror/core": "0.0.1-alpha.6",
    "@remirror/core-extensions": "0.0.1-alpha.6",
    "@remirror/extension-emoji": "0.0.1-alpha.6",
    "@remirror/extension-enhanced-link": "0.0.1-alpha.6",
    "@remirror/extension-mention": "0.0.1-alpha.6",
    "@remirror/react": "0.0.1-alpha.6",
    "@types/emoji-mart": "^2.8.2",
    "emoji-mart": "^2.9.2",
    "emotion-theming": "^10.0.9",
    "keycode": "^2.2.0"
  },
  "peerDependencies": {
    "@types/react": "^16.8.0",
    "@types/react-dom": "^16.8.0",
    "react": "^16.8.0",
    "react-dom": "^16.8.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "umd": "lib/dist/ui-twitter.umd.js",
  "umd:min": "lib/dist/ui-twitter.umd.min.js",
  "umdGlobals": {
    "react": "React",
    "@remirror/core": "RemirrorCore",
    "react-dom": "ReactDOM"
  }
