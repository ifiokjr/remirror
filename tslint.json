{
  "extends": "@kj/tslint-rules/react",
  "linterOptions": {
    "exclude": ["./support/fixtures/*.ts"]
  },
  "rules": {
    "no-implicit-dependencies": [
      true,
      "dev",
      [
        "@storybook/react",
        "@storybook/addon-actions",
        "@storybook/addon-links",
        "jest-axe",
        "jest",
        "jest-cli",
        "jest-dom",
        "jest-emotion",
        "@testing-library/react",
        "react-hooks-testing-library",
        "puppeteer",
        "puppeteer-to-istanbul",
        "jest-extended",
        "prosemirror-test-builder",
        "jest-matcher-utils",
        "enzyme",
        "jest-image-snapshot",
        "chalk",
        "@test-fixtures",
        "yargs",
        "jest-remirror",
        "jest-prosemirror"
      ]
    ],
    "no-empty": false,
    "no-any": false,
    "no-object-literal-type-assertion": false,
    "no-console": false,
    "max-classes-per-file": false,
    "no-invalid-this": false,
    "no-parameter-reassignment": false,
    "no-this-assignment": [true, { "allowed-names": ["^self$"], "allow-destructuring": true }],
    "no-submodule-imports": [
      true,
      "@testing-library/react",
      "emoji-regex",
      "react-dom",
      "emoji-mart",
      "react-feather",
      "prismjs",
      "refractor",
      "react-syntax-highlighter",
      "@storybook/addon-links",
      "@storybook/addon-actions",
      "jest-dom",
      "firebase",
      "rxfire",
      "lodash",
      "date-fns",
      "next",
      "rxjs",
      "mz"
    ]
  }
}
