{
  "extends": "@kj/tslint-rules/react",
  "linterOptions": {
    "exclude": ["./support/fixtures/*.ts"]
  },
  "rules": {
    "no-implicit-dependencies": [
      true,
      "dev",
      [
        "jest-axe",
        "jest",
        "jest-cli",
        "jest-dom",
        "jest-emotion",
        "react-testing-library",
        "puppeteer",
        "puppeteer-to-istanbul",
        "jest-extended",
        "prosemirror-test-builder",
        "jest-matcher-utils",
        "enzyme",
        "jest-image-snapshot",
        "chalk",
        "@test-fixtures",
        "yargs",
        "jest-remirror",
        "jest-prosemirror"
      ]
    ],
    "no-empty": false,
    "no-any": false,
    "no-object-literal-type-assertion": false,
    "no-console": false,
    "max-classes-per-file": false,
    "no-invalid-this": false,
    "no-parameter-reassignment": false,
    "no-this-assignment": [true, { "allowed-names": ["^self$"], "allow-destructuring": true }],
    "no-submodule-imports": [
      true,
      "react-testing-library",
      "emoji-regex/es2015/text",
      "react-dom/server",
      "emoji-mart",
      "jest-dom"
    ]
  }
}
