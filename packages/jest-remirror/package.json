{
  "private": true,
  "name": "jest-remirror",
  "description": "A text editor for react built with prosemirror",
  "license": "MIT",
  "author": "Ifiok Jr. <ifiokotung@gmail.com>",
  "homepage": "https://github.com/ifiokjr/remirror/tree/master/packages/jest-remirror",
  "repository": {
    "type": "git",
    "url": "https://github.com/ifiokjr/remirror.git",
    "directory": "packages/jest-remirror"
  },
  "version": "0.0.1-alpha.6",
  "main": "lib/index.js",
  "files": [
    "lib",
    "src"
  ],
  "scripts": {
    "build": "run-s build:declaration build:babel",
    "build:babel": "babel src --out-dir lib --extensions \".ts,.tsx\" -s",
    "build:declaration": "tsc -p ./tsconfig.prod.json --emitDeclarationOnly --declarationMap",
    "dev": "run-p watch:*",
    "lint": "tslint --project tsconfig.json --config ../../tslint.json",
    "test": "jest",
    "test:live": "cross-env TEST_ENV=live jest",
    "typecheck": "tsc -p ./tsconfig.json --noEmit",
    "watch:babel": "babel src --out-dir lib --extensions \".ts,.tsx\" -w",
    "watch:declaration": "tsc -p ./tsconfig.prod.json --emitDeclarationOnly --declarationMap --watch"
  },
  "types": "lib/index.d.ts",
  "dependencies": {
    "@remirror/core": "0.0.1-alpha.6",
    "@remirror/core-extensions": "0.0.1-alpha.6",
    "@remirror/react": "0.0.1-alpha.6",
    "@remirror/renderer-react": "0.0.1-alpha.6",
    "@types/prosemirror-model": "^1.7.0",
    "@types/prosemirror-view": "^1.3.1",
    "jest-snapshot": "^24.5.0",
    "keycode": "^2.2.0",
    "flatten": "^1.0.2",
    "prosemirror-model": "^1.7.0",
    "prosemirror-view": "^1.8.3",
    "react-testing-library": "6.0.0"
  },
  "peerDependencies": {
    "@types/react": "^16.7.18",
    "@types/react-dom": "^16.8.0",
    "react": "^16.8.0",
    "react-dom": "^16.8.0"
  },
  "keywords": [
    "prosemirror",
    "react",
    "ssr",
    "text editor"
  ]
}
