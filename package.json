{
  "private": true,
  "name": "root",
  "workspaces": {
    "packages": [
      "@remirror/*",
      "internal/*",
      "internal/dependencies/*",
      "docs"
    ]
  },
  "scripts": {
    "build": "lerna run build",
    "checks": "run-s integrity lint typecheck test",
    "checks:parallel": "run-p lint typecheck test",
    "ci:checks": "run-s integrity lint typecheck build test:ci",
    "clean": "run-p clean:*",
    "clean:modules": "lerna clean --yes && lerna run --parallel clean",
    "clean:root": "rimraf node_modules .jest coverage",
    "dev": "lerna run dev --parallel",
    "fix": "run-s fix:*",
    "fix:config": "tslint --project config/tsconfig.json --config tslint.json --fix",
    "fix:lint": "lerna run lint --parallel -- --fix",
    "fix:prettier": "prettier --write \"**/*.{json,yml,yaml,md,mdx}\"",
    "integrity": "yarn check --integrity",
    "lint": "run-s lint:*",
    "lint:config": "tslint --project config/tsconfig.json --config tslint.json",
    "lint:dts": "tslint -p dtslint/tsconfig.custom.json -c dtslint/tslint.custom.json dtslint/*.dts.ts",
    "lint:ts": "lerna run lint --parallel",
    "prepublish:alpha": "run-s ci:checks",
    "publish:alpha": "lerna publish prerelease --preid=alpha --exact --dist-tag=alpha",
    "test": "jest",
    "test:ci": "run-s test:live test:e2e",
    "test:e2e": "cd e2e && yarn cypress:run",
    "test:e2e:watch": "cd e2e && cypress:open --scope@",
    "test:live": "cross-env TEST_ENV=live jest",
    "test:watch": "jest  --watch --verbose=false --coverage=false",
    "typecheck": "lerna run typecheck"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn checks",
      "post-merge": "lerna bootstrap"
    }
  },
  "lint-staged": {
    "@remirror/**/*.{ts,tsx}": [
      "tslint --fix",
      "git add"
    ],
    "@remirror/*/src/**/*.{ts,tsx}": [
      "jest --coverage=false --bail --findRelatedTests"
    ],
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.{json,yml,yaml,md,mdx}": [
      "prettier --write",
      "git add"
    ],
    "**/.babelrc.js": [
      "eslint --fix",
      "git add"
    ],
    "package.json": [
      "prettier-package-json --write",
      "git add"
    ],
    "**/package.json": [
      "prettier-package-json --write",
      "git add"
    ]
  },
  "resolutions": {
    "babel-core": "7.0.0-bridge.0",
    "react": "16.8.0-alpha.1",
    "react-dom": "16.8.0-alpha.1",
    "jsdom": "13.2.0",
    "hoist-non-react-statics": "3.3.0"
  }
}
