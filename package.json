{
  "private": true,
  "name": "root",
  "workspaces": {
    "packages": [
      "@remirror/*",
      "internal/*",
      "docs"
    ]
  },
  "scripts": {
    "build": "run-s build:rollup build:modules",
    "build:modules": "lerna run build",
    "build:production": "cross-env NODE_ENV=production run-s build",
    "build:rollup": "rollup --config ./support/rollup/rollup.config.js",
    "checks": "run-s integrity lint typecheck test",
    "checks:parallel": "run-p lint typecheck test",
    "ci:checks": "run-s integrity lint typecheck build test:ci",
    "clean": "run-s clean:modules clean:lerna clean:root",
    "clean:lerna": "lerna clean --yes",
    "clean:modules": "lerna run --parallel clean",
    "clean:root": "rimraf -rf node_modules .jest coverage",
    "cy:open": "cd internal/e2e && yarn cypress:open",
    "cy:open:docs": "start-server-and-test docs:ci http-get://localhost:3000 cy:open",
    "cy:run": "cd internal/e2e && yarn cypress:run",
    "cy:run:docs": "start-server-and-test docs:ci http-get://localhost:3000/ cy:run",
    "cy:verify": "cypress verify",
    "dev": "lerna run dev --parallel",
    "docs:ci": "cd docs && yarn dev --debug=true",
    "fix": "run-s fix:lint:* fix:*",
    "fix:lint:babel": "eslint **/.babelrc.js --fix",
    "fix:lint:js": "eslint support *.js @remirror docs internal --fix",
    "fix:lint:ts": "lerna run lint --parallel -- --fix",
    "fix:prettier": "prettier --write \"**/*.{json,yml,yaml,md,mdx}\"",
    "fix:support": "tslint --project support/tsconfig.json --config tslint.json --fix",
    "integrity": "yarn check --integrity",
    "lint": "run-s lint:*",
    "lint:babel": "eslint **/.babelrc.js",
    "lint:js": "eslint support *.js @remirror docs internal",
    "lint:support": "tslint --project support/tsconfig.json --config tslint.json",
    "lint:ts": "lerna run lint --parallel",
    "prepublish:alpha": "run-s ci:checks",
    "publish:alpha": "lerna publish prerelease --preid=alpha --exact --dist-tag=alpha",
    "test": "jest",
    "test:ci": "run-s test:live test:e2e",
    "test:e2e": "run-s cy:run:docs",
    "test:e2e:watch": "cd e2e && cypress:open",
    "test:live": "cross-env TEST_ENV=live jest",
    "test:watch": "jest  --watch --verbose=false --coverage=false",
    "typecheck": "lerna run typecheck"
  },
  "engines": {
    "node": ">=8",
    "yarn": "^1.13.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn checks",
      "post-merge": "lerna bootstrap"
    }
  },
  "lint-staged": {
    "{@remirror,internal,docs}/**/*.{ts,tsx}": [
      "tslint --fix",
      "git add"
    ],
    "@remirror/*/src/**/*.{ts,tsx}": [
      "jest --coverage=false --bail --findRelatedTests"
    ],
    "docs/**/*.{ts,tsx}": [
      "jest --coverage=false --bail --findRelatedTests"
    ],
    "**/*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.{json,yml,yaml,md,mdx}": [
      "prettier --write",
      "git add"
    ],
    "**/.babelrc.js": [
      "eslint --fix",
      "git add"
    ],
    "package.json": [
      "prettier-package-json --write",
      "git add"
    ],
    "**/package.json": [
      "prettier-package-json --write",
      "git add"
    ]
  },
  "resolutions": {
    "react": "16.8.0-alpha.1",
    "react-dom": "16.8.0-alpha.1",
    "jsdom": "13.2.0",
    "@babel/parser": "7.3.1",
    "hoist-non-react-statics": "3.3.0"
  }
}
