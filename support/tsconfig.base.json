{
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "jsx": "preserve",
    "types": ["jest", "jest-extended", "jest-axe", "@testing-library/jest-dom/extend-expect", "jest-emotion"],
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "forceConsistentCasingInFileNames": true,
    "allowUnreachableCode": false,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "strict": true,
    "alwaysStrict": true,
    "resolveJsonModule": true,
    "plugins": [{ "name": "typescript-styled-plugin" }, { "name": "typescript-tslint-plugin" }]
  }
}
